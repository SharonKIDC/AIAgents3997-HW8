# Residential Complex Tenant Management System
# Environment Configuration Template
# Copy this file to .env and update with actual values

# Database Configuration
EXCEL_DATABASE_PATH=./data/excel/tenants.xlsx

# MCP Server Configuration
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8000

# Web UI Configuration
REACT_APP_API_BASE_URL=http://localhost:8000
REACT_APP_ENVIRONMENT=development

# AI Agent Configuration
AI_MODEL_PROVIDER=anthropic
AI_MODEL_NAME=claude-sonnet-4-5
AI_API_KEY=sk-ant-your-api-key-here

# WhatsApp Integration (Optional)
WHATSAPP_API_ENABLED=false
WHATSAPP_API_KEY=your-whatsapp-api-key-here

# Logging
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/app.log

# Security
SECRET_KEY=your-secret-key-here-min-32-chars
JWT_EXPIRATION_HOURS=24
